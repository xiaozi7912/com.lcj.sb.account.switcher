<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:padding="15dp">

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_element_1_p"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="00000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/stage_title_text"
        app:layout_constraintLeft_toRightOf="@+id/icon_iv"
        app:layout_constraintTop_toTopOf="@+id/icon_iv" />

    <TextView
        android:id="@+id/stage_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="00000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_iv"
        app:layout_constraintLeft_toRightOf="@+id/icon_iv"
        app:layout_constraintTop_toBottomOf="@+id/event_title_text" />
</androidx.constraintlayout.widget.ConstraintLayout>