<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_item_3"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="20dp">

        <ImageView
            android:id="@+id/account_icon_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_launcher_jp_n"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/account_alias_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="0000000000"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/account_path_tv"
            app:layout_constraintLeft_toRightOf="@+id/account_icon_iv"
            app:layout_constraintRight_toLeftOf="@+id/account_more_btn"
            app:layout_constraintTop_toTopOf="@+id/account_icon_iv" />

        <TextView
            android:id="@+id/account_path_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:lines="1"
            android:text="0000000000"
            android:textColor="#80ffffff"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/account_update_time_tv"
            app:layout_constraintLeft_toRightOf="@+id/account_icon_iv"
            app:layout_constraintRight_toLeftOf="@+id/account_more_btn"
            app:layout_constraintTop_toBottomOf="@+id/account_alias_tv" />

        <TextView
            android:id="@+id/account_update_time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:lines="1"
            android:text="0000000000"
            android:textColor="#80ffffff"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/account_icon_iv"
            app:layout_constraintLeft_toRightOf="@+id/account_icon_iv"
            app:layout_constraintRight_toLeftOf="@+id/account_more_btn"
            app:layout_constraintTop_toBottomOf="@+id/account_path_tv" />

        <ImageButton
            android:id="@+id/account_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="2dp"
            android:src="@drawable/selector_account_more_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>