<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/drawer_item_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_launcher_jp_p"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/drawer_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0000000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/drawer_item_icon"
            app:layout_constraintLeft_toRightOf="@+id/drawer_item_icon"
            app:layout_constraintTop_toTopOf="@+id/drawer_item_icon" />

        <ImageButton
            android:id="@+id/drawer_item_apk_download_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/round_system_update_black_24"
            app:layout_constraintBottom_toBottomOf="@+id/drawer_item_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/drawer_item_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>